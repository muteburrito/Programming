<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/imageButton"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"

        android:layout_marginLeft="70dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/createContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/imageButton"
        android:onClick="next"
        android:text="Create Contact" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:onClick="next"
        android:layout_toRightOf="@id/imageButton"
        android:text="@string/upadate_existing" />

    <ImageButton
        android:id="@+id/call"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageButton"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:onClick="call"
        android:src="@drawable/call_for" />

    <ImageButton
        android:id="@+id/addCall"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/call"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:onClick="next"
        android:src="@drawable/contact_phone_for" />


    <EditText
        android:id="@+id/number"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:inputType="number" />

    <ImageButton
        android:id="@+id/call2"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageButton"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="call"
        android:src="@drawable/call_for" />

    <ImageButton
        android:id="@+id/msg"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageButton"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/msg_foreground" />

    <Button
        android:id="@+id/InsertRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:text="Inserted Record" />


</RelativeLayout>